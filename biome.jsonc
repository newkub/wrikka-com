{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"assist": {
		"actions": { "source": { "organizeImports": "on" } }
	},
	"files": {
		"includes": ["**/*.ts", "**/*.vue", "**/*.html", "**/*.css"],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedImports": "off",
				"noNodejsModules": "warn",
				"noUnusedFunctionParameters": "off"
			},
			"style": {
				"useNodejsImportProtocol": "error"
			}
		},
		"domains": {
			"react": "none",
			"next": "none",
			"project": "recommended",
			"test": "recommended"
		}
	}
}
